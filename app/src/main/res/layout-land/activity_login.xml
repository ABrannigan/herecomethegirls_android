<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background2"


    tools:context="com.herecomethegirls.abrannigan.android.datastream.datastreams.LoginActivity"
    android:baselineAligned="false">

    <EditText
        android:id="@+id/channelEditText"

        android:gravity="center"
        android:layout_width="281dp"
        android:layout_height="50dp"
        android:hint="@string/channel_hint"
        android:textColor="@color/primary_dark_color"
        android:inputType="text"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/login_username"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="233dp"
        android:layout_height="161dp"
        android:src="@drawable/red_triangle_icon"
        android:id="@+id/imageView2"
        android:foregroundGravity="center_vertical"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="24dp" />

    <EditText
        android:hint="@string/username"
        android:inputType="text"
        android:layout_width="281dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:id="@+id/login_username"

        android:background="@color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="64dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="281dp"
        android:layout_height="64dp"
        android:text="@string/login_submit"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/pn_blue"
        android:onClick="joinChat"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/channelEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="64dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="LOGIN"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"

        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />


</android.support.constraint.ConstraintLayout>
