<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floral_hd_city_image"
    android:baselineAligned="false">


    <View android:background="#ffff00" android:layout_width="match_parent" android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_weight="115.86"
        android:adjustViewBounds="false"
        android:gravity="center"
        android:padding="80dp"
         />

    <View android:background="#ffff00" android:layout_width="match_parent" android:layout_height="1dp"/>

    <Button
        android:id="@+id/inviteBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:background="@color/black"
        android:drawableLeft="@drawable/icon2"
        android:duplicateParentState="false"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:paddingEnd="80dp"
        android:paddingStart="70dp"
        android:text="Invite Friends"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <View android:background="#ffff00" android:layout_width="match_parent" android:layout_height="1dp"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:background="@color/black"
        android:drawableLeft="@drawable/icon3"
        android:duplicateParentState="false"
        android:gravity="center"
        android:onClick="startChat"
        android:padding="@dimen/activity_horizontal_margin"
        android:paddingEnd="150dp"
        android:paddingStart="70dp"
        android:text="@string/chat"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <View android:background="#ffff00" android:layout_width="match_parent" android:layout_height="1dp"/>



    <Button
        android:id="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:background="@color/black"
        android:drawableStart="@drawable/icon1"
        android:onClick="shareLocation"
        android:padding="@dimen/activity_vertical_margin"
        android:paddingEnd="70dp"
        android:paddingStart="70dp"
        android:text="@string/share_button"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />


    <View android:background="#ffff00" android:layout_width="match_parent" android:layout_height="1dp"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:background="@color/black"
        android:drawableLeft="@drawable/icon5"
        android:scaleHeight="100%"
        android:scaleWidth="50%"
        android:gravity="center"
        android:onClick="followLocation"
        android:padding="@dimen/activity_vertical_margin"
        android:paddingEnd="50dp"
        android:paddingStart="70dp"
        android:text="@string/follow_button"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <View android:background="#ffff00" android:layout_width="match_parent" android:layout_height="1dp"/>


</LinearLayout>